<?xml version="1.0" encoding="UTF-8" ?>
<themeeditor>
	<author>pavotheme</author>
	<name>Live Theme Editor</name>	
	<layout>		
		
		<item>
			<label>Main Content Home FullWidth</label>
			<block>home_container_full</block>
			<default>0</default>
			<option>
				<text>No</text>
				<value>0</value>
			</option> 
			<option>
				<text>Yes</text>
				<value>1</value>
			</option>
		</item>

		<item>
			<label>Template Layout Mode</label>
			<block>template_layout</block>
			<default>fullwidth</default>
			<option>
				<text>Full Width</text>
				<value>fullwidth</value>
			</option> 
			<option>
				<text>Boxed Large</text>
				<value>boxed-lg</value>
			</option> 
		</item>

		<item>
			<label>Enable Quickview</label>
			<block>Quickview</block>
			<default>0</default>
			<option>
				<text>Enable</text>
				<value>1</value>
			</option> 
			<option>
				<text>Disable</text>
				<value>0</value>
			</option>
		</item>
		
		<item>
			<label>Logo Type</label>
			<block>logo_type</block>
			<default>logo-theme</default>
			<option>
				<text>Logo In Theme</text>
				<value>logo-theme</value>
			</option> 
			<option>
				<text>Logo Opencart</text>
				<value>logo-opencart</value>
			</option> 
		</item>

		<item>
			<label>Header Layout</label>
			<block>header_layout</block>
			<default>default</default>
			<option>
				<text>Header default</text>
				<value>default</value>
			</option> 
			<option>
				<text>Header 2</text>
				<value>header2</value>
			</option>
			<option>
				<text>Header 3</text>
				<value>header3</value>
			</option>	
		</item>
		<item>
			<label>Auto scroll category sidebar</label>
			<block>auto_scroll_sidebar</block>
			<default>0</default>
			<option>
				<text>Enable</text>
				<value>1</value>
			</option> 
			<option>
				<text>Disable</text>
				<value>0</value>
			</option>
		</item>
		<item>
			<block>StickyMenu</block>
			<default>main-menu-fixed</default>
			<option>
				 <text>Fixed</text>
				 <value>main-menu-fixed</value>
			</option> 
			<option>
				 <text>No Fixed</text>
				 <value>no-fixed</value>
			</option>
		</item>
		
	</layout>
</themeeditor>